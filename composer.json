{
	"name": "lorand/wordpress-plugin-coding-test",
	"type": "plugin",
	"description": "Test plugin for senior dev position",
	"keywords": [
		"plugin",
		"testing",
		"wordpress"
	],
	"license": "MIT",
	"require": {
		"php": "^7.4"
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true,
		"platform-check": false
	},
	"autoload": {
		"psr-4": {
			"CodingTest\\": "inc/"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"squizlabs/php_codesniffer": "^3.7",
		"wp-coding-standards/wpcs": "^2.3"
	}
}
